<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NatureCollection" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Create Default Text Style -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/Kanit</item>
    </style>

    <!-- Create Subtitle Text Style -->
    <style name="SubtitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <!-- Create Title Text Style -->
    <style name="TitleTextStyle" parent="SubtitleTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

</resources>